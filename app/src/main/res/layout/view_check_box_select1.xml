<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/include_check_box_select_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/include_check_box_select_tv"
        style="@style/Text_Black24"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/include_check_box_select_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/all_check_box_select_icon"
        android:visibility="invisible" />
</RelativeLayout>
